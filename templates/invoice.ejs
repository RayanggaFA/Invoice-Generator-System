<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <style>
    body {
      font-family: 'Helvetica Neue', sans-serif;
      padding: 40px;
      color: #2c3e50;
    }
    h1 {
      text-align: center;
      color: #34495e;
    }
    .meta {
      margin-top: 20px;
      font-size: 14px;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 25px;
    }
    th, td {
      border: 1px solid #bdc3c7;
      padding: 10px;
      text-align: left;
    }
    th {
      background-color: #ecf0f1;
    }
    .total {
      text-align: right;
      margin-top: 20px;
      font-size: 16px;
    }
  </style>
</head>
<body>
  <h1>Invoice</h1>

  <div class="meta">
    <p><strong>Klien:</strong> <%= invoice.clientName %></p>
    <p><strong>Tanggal:</strong> <%= invoice.date %></p>
  </div>

  <table>
    <thead>
      <tr>
        <th>Nama Item</th>
        <th>Qty</th>
        <th>Harga</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      <% let grandTotal = 0; %>
      <% invoice.items.forEach(item => { %>
        <% let subtotal = item.qty * item.price; grandTotal += subtotal; %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.qty %></td>
          <td>Rp <%= item.price.toLocaleString('id-ID') %></td>
          <td>Rp <%= subtotal.toLocaleString('id-ID') %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <div class="total">
    <strong>Total Keseluruhan: Rp <%= grandTotal.toLocaleString('id-ID') %></strong>
  </div>
</body>
</html>
